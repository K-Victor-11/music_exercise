<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivGuide_Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_close_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel_Space1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="음원 청취 방법"
            android:textColor="@color/color_white"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel_Space2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="상단의 좌우로 움직이는 음량조절 막대를 확인하시고,"
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectTitleLabel_Space3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tvCustom_SelectContent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="본인의 귀에서 소리나는 이명보다 작음 음량으로 청취하는 것을 추천합니다."
            android:textColor="@color/color_ff0000"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>